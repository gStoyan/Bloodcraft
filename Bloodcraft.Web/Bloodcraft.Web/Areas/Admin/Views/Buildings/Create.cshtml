@model AdminBuildingFormModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new minion.</h4>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl"></label>
                <input asp-for="ImgUrl" class="form-control" value="/images/Buildings//.png" />
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoldCost"></label>
                <input asp-for="GoldCost" class="form-control" />
                <span asp-validation-for="GoldCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodCost"></label>
                <input asp-for="BloodCost" class="form-control" />
                <span asp-validation-for="BloodCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GoldIncome"></label>
                <input asp-for="GoldIncome" class="form-control" />
                <span asp-validation-for="GoldIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodIncome"></label>
                <input asp-for="BloodIncome" class="form-control" />
                <span asp-validation-for="BloodIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuildTime"></label>
                <input asp-for="BuildTime" class="form-control" />
                <span asp-validation-for="BuildTime" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}