@model AdminListingViewModel

@{
    ViewData["Title"] = "All Users";
}

<h2>@TempData["SuccessMessage"]</h2>

<a asp-action="Index"
   asp-route-page="@(Model.PrviousPage)"
   class="btn btn-default">
    Previous
</a>
<a asp-action="Index"
   asp-route-page="@(Model.NextPage)"
   class="btn btn-default">
    Next
</a>
<h3>@Model.PrviousPage @Model.CurrentPage @Model.NextPage</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Date Registered
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.AllUsers)
        {
            <tr>
                <td>
                    @user.Id
                </td>
                <td>
                    @user.Username
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.DateRegistered
                </td>
                <td>                    
                    <a asp-action="Delete" class="btn btn-primary" asp-route-id="@user.Id">Delete</a>
                </td>
                <td>
                    <a asp-action="ChangeRole" class="btn btn-primary" asp-route-id="@user.Id">Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
    
