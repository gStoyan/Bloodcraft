@model AdminCastleFormModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Create a new castle.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl"></label>
                <input asp-for="ImgUrl" class="form-control"  value="/images//Castles//.jpg"/>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blood"></label>
                <input asp-for="Blood" class="form-control" />
                <span asp-validation-for="Blood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gold"></label>
                <input asp-for="Gold" class="form-control" />
                <span asp-validation-for="Gold" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalBloodIncome"></label>
                <input asp-for="TotalBloodIncome" class="form-control" />
                <span asp-validation-for="TotalBloodIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalGoldIncome"></label>
                <input asp-for="TotalGoldIncome" class="form-control" />
                <span asp-validation-for="TotalGoldIncome" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

