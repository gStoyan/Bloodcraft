@model CastlesListingViewModel
@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

@foreach (var castle in Model.Castles)
{
    <div class="leftDiv">
        <img src="@castle.ImgUrl" />
        <p>-Name: @castle.Name</p>
        <p>-Starting Gold: @castle.Gold</p>
        <p>-Starting Blood: @castle.Blood</p>
        <p>-Starting Gold Income: @castle.TotalGoldIncome</p>
        <p>-Starting BloodIncome: @castle.TotalBloodIncome</p>

        <p>
            -Starting Buildings: @foreach (var building in castle.Buildings)
            {
                @building.Name
            }
        </p>
        <p>
            -Starting Minions: @foreach (var minion in castle.Minions)
            {
                @minion.Name
                @minion.AttackPoints
            }
        </p>
        <a asp-action="Choose" asp-route-name="@castle.Name">
            Choose
        </a>
    </div>
}
