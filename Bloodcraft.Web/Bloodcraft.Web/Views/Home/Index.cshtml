@model HomeViewModel

@{
    ViewData["Title"] = "Bloodcraft Home Page";
}

<div class="row justify-content-center">
    <div class="text-center">
        <br /> 
        <div class="jumbotron jumbotron-fluid">
                <h1 class="display-3">BLOODCRAFT</h1>
            @if (!User.Identity.IsAuthenticated)
            {
                <p class="lead">To join the fight create and army from here: </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/account/register" role="button">Register</a>
                </p>
            }
            @if (User.Identity.IsAuthenticated)
            {

                <p class="lead">Welcome @User.Identity.Name</p>
                @if (Model.CastlesCount == 0)
                {
                    <p class="lead">Choose your <strong>first</strong> castle and start spilling blood</p>
                    <p>
                        <a class="btn btn-primary btn-lg" href="/castles/list" role="button">To Castles</a>
                    </p>
                }
                
            }
            </div>
        </div>

    <div class="container">
    </div>
</div>
